<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:layout_marginTop="20dp"
    android:paddingBottom="10dp"
    >

    <ImageView
        android:id="@+id/item_icons"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_home"
        android:padding="10dp"
        android:background="@drawable/income_back"
        />

    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rent"
            android:textStyle="bold"
            android:fontFamily="@font/baloo_bhai_2_medium"
            android:textSize="14dp"
            android:textColor="@color/primary_dark_black_dark_1"
            />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/item_percentage"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/item_name"
            android:layout_marginTop="6dp"/>

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/item_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 15000.0"
            android:fontFamily="@font/baloo_bhai_2_medium"
            android:textSize="14dp"
            android:textColor="@color/primary_dark_black_dark_1"
            />

        <TextView
            android:layout_below="@id/item_amount"
            android:id="@+id/item_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="81%"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/baloo_bhai_2_medium"
            android:textSize="10dp"
            android:textColor="@color/primary_dark_black_dark_1"
            />

    </RelativeLayout>

</LinearLayout>